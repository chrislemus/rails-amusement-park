<h1> <%=@attraction.name%> </h1>
<p> <%=@attraction.nausea_rating%> </p>
<p> <%=@attraction.happiness_rating%> </p>
<p> <%=@attraction.tickets%> </p>
<p> <%=@attraction.min_height%> </p>

<%if current_user.admin%>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<%else%>
<%= form_for @ride do |f| %>
<%= f.hidden_field :user_id %><br />
<%= f.hidden_field :attraction_id %><br />
<%= f.submit "Go on this ride", class:"btn btn-light" %>
<% end %>
<%end%>